<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bgcolorallpages"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginConformationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/ImageLoginCmf"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/login_successfully"
            android:layout_gravity="center">

        </ImageView>
        <TextView
            android:id="@+id/TextLoginSucc"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Login Successfully"
            android:textStyle="bold"
            android:textSize="21sp"
            android:textColor="@color/btn"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textAlignment="center"

            >

        </TextView>

    </LinearLayout>

</RelativeLayout>