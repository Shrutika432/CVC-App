<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bgcolorallpages"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SigninActivity3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">


    <ImageView
        android:id="@+id/ImageSignUpForm"
        android:src="@drawable/signup_form"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center">
    </ImageView>



    <TextView
        android:id="@+id/TextVolunteerForm"
        android:layout_width="400dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:text="CVC Volunteering Form"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/heading">

    </TextView>
        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Thank you for your support and please stay tuned with CVC helpline for any queries."
            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="sans">
        </TextView>

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="For any queries or doubts please save and contact CVC HELPLINE: 7016152160. \nSEND your name at the helpline to receive further updates. \nTHANK YOU FOR YOUR SUPPORT."
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="sans">


        </TextView>

        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button


                android:id="@+id/BtnBack2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:background="@drawable/btn_bg"
                android:text="Back"
                android:textColor="@color/White"
                android:textSize="15dp" />

            <Button

                android:id="@+id/BtnSubmit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="center"
                android:background="@drawable/btn_bg"
                android:text="Submit"
                android:textColor="@color/White"
                android:textSize="15dp"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>