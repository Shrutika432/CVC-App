<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bgcolorallpages"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ImageVolunteer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/donar_image"></ImageView>


            <TextView
                android:id="@+id/tvDonationForm"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Your Name"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#050000"/>

            <!--            android:textColor="#050000"-->


            <TextView
                android:id="@+id/tvDcontact"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="Contact Number"
                android:textColor="@color/heading"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans">
            </TextView>
            <TextView
                android:id="@+id/textDcontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_textformat"
                android:inputType="phone"
                android:padding="6dp"
                android:textColorHint="@color/btn">

            </TextView>
            <TextView
                android:id="@+id/tvDemail"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="Email"
                android:textColor="@color/heading"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans">

            </TextView>
            <TextView
                android:id="@+id/textDemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_textformat"
                android:inputType="textEmailAddress"
                android:padding="6dp"
                android:textColorHint="@color/btn">

            </TextView>
            <TextView
                android:id="@+id/tvDpurpose"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="Purpose of donation"
                android:textColor="@color/heading"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans">

            </TextView>
            <TextView
                android:id="@+id/textDpurpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_textformat"
                android:inputType="text"
                android:padding="6dp"
                android:textColorHint="@color/btn">

            </TextView>
            <TextView
                android:id="@+id/tvDaddress"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="Address"
                android:textColor="@color/heading"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans">

            </TextView>
            <TextView
                android:id="@+id/textDaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_textformat"
                android:inputType="text"
                android:padding="6dp"
                android:textColorHint="@color/btn">

            </TextView>
            <TextView
                android:id="@+id/tvDPANno"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="PAN NO"
                android:textColor="@color/heading"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans">

            </TextView>
            <TextView
                android:id="@+id/textDPANno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_textformat"
                android:inputType="text"
                android:padding="6dp"
                android:textColorHint="@color/btn">

            </TextView>
            <TextView
                android:id="@+id/G"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="Payment options"
                android:textColor="@color/heading"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans">

            </TextView>
            <TextView
                android:id="@+id/textpayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_textformat"
                android:inputType="text"
                android:padding="6dp"
                android:textColorHint="@color/btn">

            </TextView>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>