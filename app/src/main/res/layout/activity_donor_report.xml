<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bgcolorallpages"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/textdonate"
            android:layout_width="match_parent"
            android:layout_height="720dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="11dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvDonationForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#162992"
                android:gravity="center"
                android:text="Your Name"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
            <!--            android:textColor="#050000"-->


            <TextView
                android:id="@+id/tvDcontact"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="Contact*"
                android:textColor="@color/btn"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans">
            </TextView>
            <TextView
                android:id="@+id/textDcontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_textformat"
                android:inputType="phone"
                android:padding="6dp"
                android:textColorHint="@color/btn">

            </TextView>
            <TextView
                android:id="@+id/tvDemail"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="Email *"
                android:textColor="@color/btn"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans">

            </TextView>
            <TextView
                android:id="@+id/textDemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_textformat"
                android:inputType="textEmailAddress"
                android:padding="6dp"
                android:textColorHint="@color/btn">

            </TextView>
            <TextView
                android:id="@+id/tvDpurpose"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="Purpose of donation"
                android:textColor="@color/btn"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans">

            </TextView>
            <TextView
                android:id="@+id/textDpurpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_textformat"
                android:inputType="text"
                android:padding="6dp"
                android:textColorHint="@color/btn">

            </TextView>
            <TextView
                android:id="@+id/tvDaddress"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="Address"
                android:textColor="@color/btn"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans">

            </TextView>
            <TextView
                android:id="@+id/textDaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_textformat"
                android:inputType="text"
                android:padding="6dp"
                android:textColorHint="@color/btn">

            </TextView>
            <TextView
                android:id="@+id/tvDPANno"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="PAN NO *"
                android:textColor="@color/btn"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans">

            </TextView>
            <TextView
                android:id="@+id/textDPANno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_textformat"
                android:inputType="text"
                android:padding="6dp"
                android:textColorHint="@color/btn">

            </TextView>
            <TextView
                android:id="@+id/G"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="Payment options"
                android:textColor="@color/btn"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans">

            </TextView>
            <TextView
                android:id="@+id/textpayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_textformat"
                android:inputType="text"
                android:padding="6dp"
                android:textColorHint="@color/btn">

            </TextView>

            <Button
                android:id="@+id/buttonshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="show" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>